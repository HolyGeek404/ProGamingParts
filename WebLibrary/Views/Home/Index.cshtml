@model Model.Home.HomePageModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="col-11">
    <div class="col-7 p-0 m-2 float-left">
        <div class="col-12 p-0 border-bottom">
            <h3 class="col-10 text-dark border-bottom">News</h3>
            <div class="col-12 center p-0" id="news-snapshot">
                @foreach (var homePageModel in Model.NewsSnapshotDtos)
                {
                    <div class="col-10 p-0 e rounded">
                        @* <img src="@homePageModel.ImgTitle" class="rounded float-left d-block col-2" alt="homeTitle"/> *@
                        <div class="text-justify col-12 p-3">
                            <h5 class="text-primary">@homePageModel.Title</h5>
                            <h6 class="col-12 font-weight-lighter">@homePageModel.TitleContent</h6>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-3 m-2 border-bottom border-danger p-0 float-right">
        <h3 class="col-12 text-danger border-danger border-bottom">Promocja</h3>
        <div class="col-12 e rounded" id="promotions">
            <div class="col-12 text-center m-2 p-0">
                <h4>@Model.PromotionDto.Name</h4>
                <img class="promotion-img" src="https://cdn.x-kom.pl/i/setup/images/prod/big/product-new-big,,2019/12/pr_2019_12_5_10_4_8_388_08.jpg" alt="PromotionImage"/>
                <div>
                    <h5 class="d-block text-secondary">
                        <s>@Model.PromotionDto.Price zł</s>
                    </h5>
                    <h2 class="d-block text-danger">@Model.PromotionDto.PromotionPrice zł</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-7 border-bottom p-0 m-2 mt-4 float-left">
        <div class="col-12 p-0">
            <h3 class="col-12 border-bottom text-dark">Zestawy</h3>
            <div class="col-11 p-0 d-flex justify-content-around align-items-center">
                @foreach (var homePageModel in Model.SetsSnapshotDtos)
                {
                    <div class="col-2 m-1 p-0 float-left text-center rounded bg-light sets" data-bind="@homePageModel.TimeIntervalId">
                        <h4 class="text-primary">
                            @homePageModel.Month
                            <span class="dropdown-toggle" style="cursor: pointer"></span>
                        </h4>
                        <h6 class="text-secondary">@homePageModel.Year</h6>
                    </div>
                }
            </div>
            <div class="col-12 price-range m-2"></div>
        </div>
    </div>

    <div class="col-3 m-2 border-bottom border-success p-0 float-right">
        <h4 class="col-12 text-success border-success border-bottom">Nowosci</h4>
        <div class="col-12 e rounded" id="promotions">
            <div class="col-12 text-center m-2 p-0">
                <h4>@Model.NewProductDto.NewProductName</h4>
                <img class="promotion-img" src="https://cdn.x-kom.pl/i/setup/images/prod/big/product-new-big,,2019/7/pr_2019_7_4_8_42_25_148_00.jpg" alt="promotionProductImg"/>
                <div>
                    <h2 class="d-block text-success">@Model.NewProductDto.NewProductPrice zł</h2>
                </div>
            </div>
        </div>
    </div>

</div>

<style>

    .sets {
        cursor: pointer;
        transition: box-shadow 0.7s;
    }

    .sets:hover {
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
    }

    .promotion-img {
        height: 200px;
        width: 200px;
    }

    .e {
        margin: 24px 0;
        transition: box-shadow 0.7s;
    }

    .e:hover {
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        cursor: pointer;
    }
</style>
<script src="~/js/Sets_PriceRanges.js"></script>
<script>
    $('.sets').on("click",
        function() {
            GetSetsPriceRanges("@Url.ActionLink("PriceRanges", "Home")", $(this).data().bind);
        })
</script>